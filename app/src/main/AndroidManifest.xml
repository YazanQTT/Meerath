<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lailathenovell.meerath">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_new2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_new2_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Meerath"
        android:fullBackupContent="@xml/backup_descriptor">
        <activity android:name="com.lailathenovell.meerath.info" android:screenOrientation="portrait" />
        <activity android:name="com.lailathenovell.meerath.result" android:screenOrientation="portrait" />
        <activity android:name="com.lailathenovell.meerath.home" android:screenOrientation="portrait" />
        <activity android:name="com.lailathenovell.meerath.splash" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>